{
  "name": "odayo",
  "version": "0.1.0",
  "description": "A framework for web applications",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "lint": "tslint index.ts src/**/*.ts",
    "coverage": "nyc report --reporter=html && opn ./coverage/index.html",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "test": "nyc mocha --opts mocha.opts src/**/*.spec.ts"
  },
  "main": "dist",
  "types": "dist",
  "author": "Asa Jones <thinkinfractals@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/codechaotic/odayo"
  },
  "bugs": {
    "url": "https://github.com/codechaotic/odayo/issues"
  },
  "bin": {
    "odayo": "./cli.js"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "src/**/*.d.ts*",
      "src/**/*.spec.ts"
    ]
  },
  "dependencies": {
    "@types/koa": "^2.0.48",
    "diminish": "^0.5.0",
    "eznv": "^0.2.0",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "koa": "^2.7.0",
    "koa-compose": "^4.1.0",
    "path-to-regexp": "^3.0.0",
    "stack-trace": "0.0.10"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/fs-extra": "^5.0.5",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.26",
    "@types/sinon": "^7.0.6",
    "@types/sinon-chai": "^3.2.2",
    "@types/stack-trace": "0.0.29",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.3.0",
    "opn-cli": "^4.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.4",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.9",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3"
  }
}
