{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["es7"],
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
